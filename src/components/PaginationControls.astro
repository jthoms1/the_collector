---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

function getPageUrl(page: number): string {
  const url = new URL(baseUrl, 'http://localhost');
  url.searchParams.set('page', page.toString());
  return url.pathname + url.search;
}

function getVisiblePages(current: number, total: number): (number | 'ellipsis')[] {
  if (total <= 7) {
    return Array.from({ length: total }, (_, i) => i + 1);
  }

  const pages: (number | 'ellipsis')[] = [];

  if (current <= 3) {
    pages.push(1, 2, 3, 4, 'ellipsis', total);
  } else if (current >= total - 2) {
    pages.push(1, 'ellipsis', total - 3, total - 2, total - 1, total);
  } else {
    pages.push(1, 'ellipsis', current - 1, current, current + 1, 'ellipsis', total);
  }

  return pages;
}

const visiblePages = getVisiblePages(currentPage, totalPages);
const hasPrev = currentPage > 1;
const hasNext = currentPage < totalPages;
---

{totalPages > 1 && (
  <nav class="flex items-center justify-center gap-2" aria-label="Pagination">
    <a
      href={hasPrev ? getPageUrl(currentPage - 1) : undefined}
      class:list={[
        "inline-flex items-center gap-1 px-4 py-2 rounded-panel text-sm font-display font-semibold transition-all duration-200",
        hasPrev
          ? "text-brown border-2 border-brown hover:bg-peach hover:shadow-comic-sm hover:-translate-y-0.5"
          : "text-brown/30 border-2 border-brown/30 cursor-not-allowed pointer-events-none"
      ]}
      aria-disabled={!hasPrev}
    >
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      Previous
    </a>

    <div class="flex items-center gap-1">
      {visiblePages.map((page) => (
        page === 'ellipsis' ? (
          <span class="px-2 py-2 text-brown/40 font-sans">...</span>
        ) : (
          <a
            href={getPageUrl(page)}
            class:list={[
              "w-10 h-10 flex items-center justify-center rounded-panel text-sm font-display font-bold transition-all duration-200",
              page === currentPage
                ? "bg-teal text-cream border-2 border-teal-dark shadow-comic-sm"
                : "text-brown border-2 border-brown/30 hover:bg-peach hover:border-brown hover:shadow-comic-sm hover:-translate-y-0.5"
            ]}
            aria-current={page === currentPage ? 'page' : undefined}
          >
            {page}
          </a>
        )
      ))}
    </div>

    <a
      href={hasNext ? getPageUrl(currentPage + 1) : undefined}
      class:list={[
        "inline-flex items-center gap-1 px-4 py-2 rounded-panel text-sm font-display font-semibold transition-all duration-200",
        hasNext
          ? "text-brown border-2 border-brown hover:bg-peach hover:shadow-comic-sm hover:-translate-y-0.5"
          : "text-brown/30 border-2 border-brown/30 cursor-not-allowed pointer-events-none"
      ]}
      aria-disabled={!hasNext}
    >
      Next
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </nav>
)}

---
import type { ItemWithType } from '../lib/schema';
import { formatCurrency, getConditionColor, getProfessionalGradeColor, getImageUrl } from '../lib/utils';

interface Props {
  item: ItemWithType;
}

const { item } = Astro.props;
const imageUrl = getImageUrl(item.image_path, item.collection_type_name);
const detailUrl = item.collection_type_name.toLowerCase() === 'cards'
  ? `/cards/${item.id}`
  : `/comics/${item.id}`;
---

<a href={detailUrl} class="card-hover group block">
  <div class="aspect-[3/4] relative overflow-hidden bg-gray-100">
    {item.image_path ? (
      <img
        src={imageUrl}
        alt={item.name}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-400">
        <svg class="w-16 h-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}

    {item.professional_grade && (
      <div class="absolute top-2 right-2">
        <span class={`badge ${getProfessionalGradeColor(item.professional_grade)}`}>
          {item.grading_company} {item.professional_grade}
        </span>
      </div>
    )}
  </div>

  <div class="p-4">
    <h3 class="font-medium text-gray-900 truncate group-hover:text-primary-600 transition-colors">
      {item.name}
    </h3>

    <div class="mt-1 flex items-center gap-2 text-sm text-gray-500">
      {item.publisher && <span>{item.publisher}</span>}
      {item.year && <span>({item.year})</span>}
    </div>

    {item.series && (
      <div class="mt-1 text-sm text-gray-500 truncate">
        {item.series} {item.issue_number && `#${item.issue_number}`}
      </div>
    )}

    <div class="mt-3 flex items-center justify-between">
      {item.condition_grade && !item.professional_grade && (
        <span class={`badge ${getConditionColor(item.condition_grade)}`}>
          {item.condition_grade}
        </span>
      )}
      {!item.condition_grade && !item.professional_grade && (
        <span class="badge bg-gray-100 text-gray-600">Ungraded</span>
      )}

      {item.estimated_value !== null && (
        <span class="font-semibold text-gray-900">
          {formatCurrency(item.estimated_value)}
        </span>
      )}
    </div>
  </div>
</a>

---
import type { ItemWithType } from '../lib/schema';
import ItemCard from './ItemCard.astro';

interface Props {
  items: ItemWithType[];
  emptyMessage?: string;
}

const { items, emptyMessage = 'No items found' } = Astro.props;
---

{items.length > 0 ? (
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
    {items.map(item => (
      <ItemCard item={item} />
    ))}
  </div>
) : (
  <div class="empty-state card">
    <svg class="empty-state-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
    </svg>
    <p class="empty-state-title">{emptyMessage}</p>
    <p class="empty-state-text">Add items to your collection to see them here.</p>
  </div>
)}

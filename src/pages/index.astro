---
import Layout from '../layouts/Layout.astro';
import ItemCard from '../components/ItemCard.astro';
import StatsChart from '../components/StatsChart';
import SearchBar from '../components/SearchBar';
import { getStats } from '../lib/db';
import { formatCurrency } from '../lib/utils';

const stats = getStats();
---

<Layout title="Dashboard">
  <div class="mb-8">
    <h1 class="page-title">Dashboard</h1>
    <p class="text-gray-500 mt-1">Overview of your collection</p>
  </div>

  <!-- Search Bar -->
  <div class="mb-8 max-w-xl">
    <SearchBar client:load placeholder="Search your entire collection..." />
  </div>

  <!-- Stats -->
  <StatsChart client:load />

  <!-- Recent Items -->
  {stats.recentItems.length > 0 && (
    <div class="mt-8">
      <h2 class="section-title mb-4">Recently Added</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
        {stats.recentItems.map(item => (
          <ItemCard item={item} />
        ))}
      </div>
    </div>
  )}

  <!-- Empty State -->
  {stats.totalItems === 0 && (
    <div class="text-center py-16 card mt-8">
      <svg class="mx-auto w-16 h-16 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">Start your collection</h3>
      <p class="mt-2 text-gray-500">Add your first card or comic to get started</p>
      <div class="mt-6 flex justify-center gap-4">
        <a href="/cards/new" class="btn-primary">
          Add Card
        </a>
        <a href="/comics/new" class="btn-secondary">
          Add Comic
        </a>
      </div>
    </div>
  )}
</Layout>

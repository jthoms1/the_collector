---
import Layout from '../layouts/Layout.astro';
import ItemCard from '../components/ItemCard.astro';
import StatsChart from '../components/StatsChart';
import SearchBar from '../components/SearchBar';
import { getStats } from '../lib/db';

const stats = getStats();
---

<Layout title="Dashboard">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="page-title">Dashboard</h1>
    <p class="subtitle mt-1">Overview of your collection</p>
  </div>

  <!-- Search Bar -->
  <div class="mb-8 max-w-xl">
    <div class="relative">
      <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
        <svg class="w-5 h-5 text-brown/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <SearchBar client:load placeholder="Search your entire collection..." />
    </div>
  </div>

  <!-- Stats -->
  <StatsChart client:load />

  <!-- Recently Added Section -->
  {stats.recentItems.length > 0 && (
    <div class="mt-10">
      <div class="flex items-center gap-3 mb-6">
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-rust" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h2 class="section-title">Recently Added</h2>
        </div>
        <div class="flex-1 border-t-2 border-dashed border-brown/20"></div>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-5">
        {stats.recentItems.map(item => (
          <ItemCard item={item} />
        ))}
      </div>
    </div>
  )}

  <!-- Empty State -->
  {stats.totalItems === 0 && (
    <div class="card mt-8">
      <div class="empty-state">
        <svg class="empty-state-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <h3 class="empty-state-title">Start Your Collection</h3>
        <p class="empty-state-text">Add your first card or comic to begin tracking your treasures</p>
        <div class="mt-6 flex justify-center gap-4">
          <a href="/cards/new" class="btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Add Card
          </a>
          <a href="/comics/new" class="btn-secondary">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Add Comic
          </a>
        </div>
      </div>
    </div>
  )}
</Layout>

---
import Layout from '../../layouts/Layout.astro';
import ItemDetail from '../../components/ItemDetail.astro';
import { getItem } from '../../lib/db';

const { id } = Astro.params;
const item = getItem(parseInt(id!));

if (!item) {
  return Astro.redirect('/cards');
}
---

<Layout title={item.name}>
  <div class="mb-6">
    <a href="/cards" class="inline-flex items-center text-gray-500 hover:text-gray-700 transition-colors">
      <svg class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Cards
    </a>
  </div>

  <ItemDetail item={item} />
</Layout>

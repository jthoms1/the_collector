---
import Layout from '../../layouts/Layout.astro';
import ItemForm from '../../components/ItemForm';
import { getCollectionTypeByName } from '../../lib/db';

// Check URL param for pre-selected card type
const url = Astro.url;
const cardTypeParam = url.searchParams.get('type');

// Default to Sports Cards if no type specified
let defaultType = getCollectionTypeByName('Sports Cards');
if (cardTypeParam === 'trading') {
  defaultType = getCollectionTypeByName('Trading Cards');
}
---

<Layout title="Add Card">
  <div class="mb-6">
    <a href="/cards" class="inline-flex items-center text-gray-500 hover:text-gray-700 transition-colors">
      <svg class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Cards
    </a>
  </div>

  <h1 class="page-title mb-8">Add New Card</h1>

  <div class="max-w-3xl">
    <ItemForm client:load collectionTypeId={defaultType?.id} />
  </div>
</Layout>
